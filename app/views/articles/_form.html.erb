<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :feed_id, style: "display: block" %>
    <%= form.text_field :feed_id %>
  </div>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :published, style: "display: block" %>
    <%= form.datetime_field :published %>
  </div>

  <div>
    <%= form.label :read, style: "display: block" %>
    <%= form.checkbox :read %>
  </div>

  <div>
    <%= form.label :starred, style: "display: block" %>
    <%= form.checkbox :starred %>
  </div>

  <div>
    <%= form.label :filtered, style: "display: block" %>
    <%= form.checkbox :filtered %>
  </div>

  <div>
    <%= form.label :guid, style: "display: block" %>
    <%= form.text_field :guid %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
