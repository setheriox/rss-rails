<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>
<div class="page_header category_header">
  <h1>Categories</h1>
  <div class="btn_new">
    <%= link_to "New category", new_category_path %>
  </div>
</div>

<div id="categories" class="categories">
  <% @categories.each do |category| %>
    <div class="category_container">
      <div class="category_name" style="background-color: <%= category.color %> ">
        <div class="category_name_text">
          <%= category.name %>
        </div>
        <div class="category_name_color">
          <%= category.color %>
        </div>
      </div>
      <div class="category_show">
        <%= link_to "Show this category", category %>
      </div>
    </div>
  <% end %>
</div>