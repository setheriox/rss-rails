<%= form_with(model: feed) do |form| %>
  <% if feed.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(feed.errors.count, "error") %> prohibited this feed from being saved:</h2>

      <ul>
        <% feed.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :url, style: "display: block" %>
    <%= form.text_field :url %>
  </div>

  <div>
    <%= form.label :category_id, "Category", style: "display: block" %>
    <%= form.collection_select :category_id, Category.all, :id, :name, 
        { prompt: "Select a category" }, 
        { class: "form-control" } %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
